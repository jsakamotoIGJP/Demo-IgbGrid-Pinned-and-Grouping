<div style="max-width: 900px; margin: auto; padding: 24px; display: flex; flex-direction: column; gap: 24px;">
    <IgbGrid Data="_people"
             PrimaryKey="@nameof(Person.Id)"
             AutoGenerate="false"
             AllowFiltering
             FilterMode="FilterMode.ExcelStyleFilter">
        <IgbColumn Field="@nameof(Person.Name)" Header="Name" Pinned></IgbColumn>
        <IgbColumn Field="@nameof(Person.Age)" Header="Age" DataType="GridColumnDataType.Number" Groupable></IgbColumn>
        <IgbColumn Field="@nameof(Person.JobTitle)" Header="Job Title" Groupable></IgbColumn>
    </IgbGrid>
</div>

