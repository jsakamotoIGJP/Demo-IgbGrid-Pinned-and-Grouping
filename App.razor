        new() { Id = 3, Name = "John", Age = 40, JobTitle = "Manager" },
        new() { Id = 4, Name = "Emily", Age = 30, JobTitle = "Marketing" },
        new() { Id = 5, Name = "David", Age = 20, JobTitle = "Sales" },
        new() { Id = 6, Name = "Sarah", Age = 20, JobTitle = "Developer" },
        new() { Id = 7, Name = "Michael", Age = 30, JobTitle = "Marketing" },
        new() { Id = 8, Name = "Emma", Age = 20, JobTitle = "Sales" },
        new() { Id = 9, Name = "James", Age = 30, JobTitle = "Developer" },
        new() { Id = 10, Name = "Olivia", Age = 40, JobTitle = "Support" }
    };
}